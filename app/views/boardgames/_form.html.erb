<%= form_for @boardgame, :html => {:class => "form-vertical"} do |f| %>
  
  <div class="form-group">
    <%= f.label :name, class: "control-label" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :developer, class: "control-label" %>
    <%= f.text_field :developer, class: "form-control" %>
  </div>

  <div>
    <%= f.label "Mechanisms: ", class: "control-label" %>
    <div class="checkbox-list"> 
      <%= f.collection_check_boxes(:category_ids, Category.all.order('mechanism ASC'), :id, :mechanism) %>
    </div>
  </div>

  <%= f.submit %>
<% end %>