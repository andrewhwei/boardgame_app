<!-- begin brief section -->
<section class="brief" id="brief">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-sm-12">
        <div class="brief-content">
          <h1><%= @full_name %></h1>
          <div class="underline"></div>
          <p><%= @user.email %></p>
          <p><%= @user.phone_number %></p>
          <p><%= @user.location %></p>
          <p><%= @user.bio %></p>
        </div>
      </div>
      <div class="col-md-6 col-sm-12">
        <figure class="small-slider">
          <% @user.pictures.each do |picture| %>
            <!-- begin single slider item -->
            <div class="item">
              <%= image_tag(picture.link) %>
            </div>
            <!-- end single slider item -->
          <% end %>
        </figure>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="section-head">
          <h3>Owned Board Games</h1>
          <span class="underline"></span>
        </div>
      </div>
    </div>

    <table class="gamesTable">
      <thead>
        <tr>
          <th>Name</th>
          <th>Developer</th>
          <th><%= "#{@user.first_name}'s rating" %></th>
          <th>Number of plays</th>
        </tr>
      </thead>

      <tbody> 
        <% @owned_games.each do |owned_game| %>
          <tr>
            <td><%= owned_game.boardgame.name %></td>
            <td><%= owned_game.boardgame.developer %></td>
            <td><%= owned_game.rating %></td>
            <td><%= owned_game.num_of_plays %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
  </div>

</section>
<!-- end brief section -->