
<section class="services" id="services">
  <div class="container">

    <h1>Edit information for <%= @ownership.boardgame.name %></h1>
    <span class="underline underline-long"></span>

    <%= form_tag "/owned_games/#{@ownership.id}", method: :patch, :class => "form-vertical" do %>

    <div class="form-group">
      <%= label_tag :rating %>
      <%= text_field_tag :rating, @ownership.rating, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= label_tag :number_of_plays %>
      <%= text_field_tag :number_of_plays, @ownership.num_of_plays, class: "form-control" %>
    </div>

    <%= submit_tag "Update Information" %>

    <% end %>

    <div>
      <%= link_to "/owned_games" do %>
        <i class="fa fa-arrow-left"></i> Back
      <% end %>  
    </div>
  </div>
</section>
